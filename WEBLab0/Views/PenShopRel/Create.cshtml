@model WEBLab0.Models.Main

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PenShopRelation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="rel.id" class="control-label"></label>
                <input asp-for="rel.id" class="form-control" />
                <span asp-validation-for="rel.id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rel.id_pen" class="control-label"></label>
                <select asp-for="rel.id_pen" asp-items="@(new SelectList(Model.pens, "id","name"))" class="form-control"></select>
                <span asp-validation-for="rel.id_pen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rel.id_shop" class="control-label"></label>
                <select asp-for="rel.id_shop" asp-items="@(new SelectList(Model.shops, "id","name"))" class="form-control"></select>
                <span asp-validation-for="rel.id_shop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rel.pen_number" class="control-label"></label>
                <input asp-for="rel.pen_number" class="form-control" />
                <span asp-validation-for="rel.pen_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rel.price" class="control-label"></label>
                <input asp-for="rel.price" class="form-control" />
                <span asp-validation-for="rel.price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
