@model WEBLab0.Models.Main

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pen.id" class="control-label"></label>
                <input asp-for="pen.id" class="form-control" />
                <span asp-validation-for="pen.id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="upload" class="control-label"></label>
                <input asp-for="upload" class="form-control" type="file"/>
                <span asp-validation-for="upload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pen.name" class="control-label"></label>
                <input asp-for="pen.name" class="form-control" />
                <span asp-validation-for="pen.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pen.id_pen_color" class="control-label"></label>
                <select asp-for="pen.id_pen_color"asp-items="@(new SelectList(Model.penColors, "id","name"))" class="form-control" ></select>
                <span asp-validation-for="pen.id_pen_color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pen.id_pen_type" class="control-label"></label>
                <select asp-for="pen.id_pen_type"asp-items="@(new SelectList(Model.penTypes, "id","name"))" class="form-control"></select>
                <span asp-validation-for="pen.id_pen_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pen.description" class="control-label"></label>
                <input asp-for="pen.description" class="form-control" />
                <span asp-validation-for="pen.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
